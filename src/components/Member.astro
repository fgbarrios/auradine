---
const { name, title, image, linkedIn } = Astro.props;
---

<div
  class="member p-4 relative border border-white/10 w-full overflow-hidden group"
  style="background: radial-gradient(46.4% 75.18% at 46.98% 49.55%, rgba(0, 97, 255, 0.24) 0%, rgba(1, 97, 255, 0.06) 100%);
"
>
  <div
    class="overlay-logo absolute top-1/2 transform -translate-y-1/2 right-0 w-fit h-full z-0"
  >
    <img
      src="/auradine-member.svg"
      alt=""
      class="w-full h-full object-cover opacity-70 md:opacity-100 md:object-contain"
    />
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 relative z-2">
    <div class="img-container relative group">
      <div
        class="overlay absolute top-0 left-0 w-full h-full z-1"
        style="background: radial-gradient(46.4% 75.18% at 46.98% 49.55%, rgba(0, 97, 255, 0.12) 0%, rgba(1, 97, 255, 0) 100%);
"
      >
      </div>
      <img
        src={image}
        alt={name}
        class="w-full min-w-[170px] min-h-[170px] aspect-square h-auto object-cover md:mix-blend-luminosity group-hover:mix-blend-normal transition-all duration-300 ease-in-out z-2"
      />
      <div
        class="overlay z-3 | absolute top-0 left-0 w-full h-full bg-[#093B98] opacity-20 group-hover:opacity-0 transition-opacity duration-300 ease-in-out hidden md:block"
      >
      </div>
    </div>
    <div class="info flex flex-col mt-auto pb-2">
      <h3
        class="font-semibold text-white text-[20px] leading-[150%] tracking-[-3%]"
      >
        {name}
      </h3>
      <p
        class="text-[#41BAE7] text-sm leading-[23.92px] tracking-[0%] opacity-70"
      >
        {title}
      </p>
    </div>
  </div>
  {
    linkedIn && (
      <a
        href={linkedIn}
        class="absolute top-4 right-4 opacity-60 hover:opacity-100 z-4"
        target="_blank"
      >
        <svg
          width="16"
          height="17"
          viewBox="0 0 16 17"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M14.875 0.375C15.4727 0.375 16 0.902344 16 1.53516V15C16 15.6328 15.4727 16.125 14.875 16.125H1.33984C0.742188 16.125 0.25 15.6328 0.25 15V1.53516C0.25 0.902344 0.742188 0.375 1.33984 0.375H14.875ZM4.99609 13.875V6.38672H2.67578V13.875H4.99609ZM3.83594 5.33203C4.57422 5.33203 5.17188 4.73438 5.17188 3.99609C5.17188 3.25781 4.57422 2.625 3.83594 2.625C3.0625 2.625 2.46484 3.25781 2.46484 3.99609C2.46484 4.73438 3.0625 5.33203 3.83594 5.33203ZM13.75 13.875V9.76172C13.75 7.75781 13.293 6.17578 10.9375 6.17578C9.8125 6.17578 9.03906 6.80859 8.72266 7.40625H8.6875V6.38672H6.47266V13.875H8.79297V10.1836C8.79297 9.19922 8.96875 8.25 10.1992 8.25C11.3945 8.25 11.3945 9.375 11.3945 10.2188V13.875H13.75Z"
            fill="white"
          />
        </svg>
      </a>
    )
  }
</div>
